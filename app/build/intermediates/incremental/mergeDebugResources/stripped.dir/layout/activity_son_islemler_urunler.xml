<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".layouts.sonIslemler.SonIslemlerUrunler">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_margin="@dimen/genel_activity_margin"
        android:layout_weight="0.5">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtSonBaslik"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                android:text="🏷️ Son İşlemler"
                android:textColor="@color/colorPrimary"
                android:textSize="30sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textSon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/txtSonBaslik"
                android:layout_marginBottom="30dp"
                android:text="Tüm yaptığınız ürün işlemleriniz tek bir yerde."
                android:textColor="@color/colorPrimary"
                android:textSize="15sp"
                android:textStyle="normal" />


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvSonIslemler"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/textSon" />

        </LinearLayout>
    </RelativeLayout>
</LinearLayout>
