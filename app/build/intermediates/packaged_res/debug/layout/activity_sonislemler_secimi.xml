<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="40dp"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/textSonIslemlerBaslik"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginTop="20dp"
            android:text="Son İşlemler Seçimi"
            android:textColor="@color/colorPrimary"
            android:textStyle="bold"
            android:textSize="30sp" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textSonIslemlerBaslik"
            android:layout_marginTop="20dp"
            android:text="@string/sonIslemlerSecimTexti"
            android:textColor="@color/colorPrimary"
            android:textSize="15sp" />


        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnSonIslemlerDepo"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_above="@+id/textVveya"
            app:icon="@drawable/ic_baseline_warehouse"
            android:text="Son İşlemler (Depolar)"
            />


        <TextView
            android:id="@+id/textVveya"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/btnSonIslemlerUrun"
            android:layout_centerHorizontal="true"
            android:text="veya"
            android:textColor="@color/colorPrimary"

            />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnSonIslemlerUrun"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:text="Son İşlemler (Ürünler)"
            app:icon="@drawable/ic_outline_urunler_24"
            app:iconSize="25dp"

            />


    </RelativeLayout>


</LinearLayout>