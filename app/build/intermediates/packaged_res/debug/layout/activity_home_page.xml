<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/background_color"
    android:orientation="vertical"
    tools:context=".HomePage">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="101dp"
            android:layout_weight="0.25">
            <!-- Header Text  -->
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="100dp">

                <TextView
                    android:id="@+id/txtHosgeldin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30dp"

                    android:text="@string/txtHosgeldniz"
                    android:textColor="@color/black"
                    android:textSize="25sp"
                    android:textStyle="normal" />

                <TextView
                    android:id="@+id/txtFirebaseAd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txtHosgeldin"
                    android:layout_marginStart="30dp"
                    android:text="TextView"
                    android:textColor="@color/white"
                    android:textSize="28sp"
                    android:textStyle="bold" />
            </RelativeLayout>

            <ImageView
                android:id="@+id/imageDepoWhiteLogo"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginStart="30dp"
                android:layout_marginTop="35dp"
                android:contentDescription="@string/cdTodo"
                app:srcCompat="@drawable/logo" />

        </RelativeLayout>


        <!-- Body Container İşlemler -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:layout_margin="20dp"
            android:layout_weight="0.6">

            <!-- Buton-1 Depo İşlemleri  -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnDepoIslemleri"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginTop="10dp"
                android:text="@string/txtDepoIslemleri"
                android:textAlignment="gravity"
                android:textSize="20sp"
                app:cornerRadius="10dp"
                app:icon="@drawable/ic_baseline_warehouse"
                app:iconGravity="top" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnUrunIslemleri"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="10dp"
                android:text="@string/txtUrunIslemleri"
                android:textSize="20sp"
                app:cornerRadius="10dp"
                app:icon="@drawable/ic_baseline_compare_arrows_24"
                app:iconGravity="top" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnStokBilgisi"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_below="@+id/btnUrunIslemleri"
                android:gravity=""
                android:text="Stok Bilgisi"
                android:textAlignment="gravity"
                app:cornerRadius="10dp"
                app:iconGravity="end" />



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/bt_theme_switch"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:text="Butona tıkladıktan sonra değişecek tema renkleri"
                android:textColor="?attr/text_color" />

            <androidx.appcompat.widget.SwitchCompat
                android:layout_centerHorizontal="true"
                android:id="@+id/bt_theme_switch"
                android:layout_below="@id/btnStokBilgisi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp" />


        </RelativeLayout>
        <!-- Bottom Nav Bar   -->


    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
















